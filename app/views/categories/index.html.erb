<%= render partial: "shared/navbar"%>

  <div class="categories-table">
    <% @categories.each do |category| %>
      <div class="category">
        <%= image_tag category.icon if category.icon.attached? %>
        <%= link_to category.name, category_path(category.id) %>       
      </div>
    <% end %>
 <%= link_to "Add Category", new_category_path, class: "waves-effect waves-light btn" %>
</div>  

